[32m+[m[32m                        DocumentSnapshot snapshot = documentChange.getDocument();[m
[32m+[m[32m                        if (snapshot.equals(value.getDocuments().get(0)))[m
[32m+[m[32m                            Log.d("logchk", "onEvent: right");[m
